bindsym Control+$mod+n exec /usr/bin/nautilus --no-desktop
bindsym $mod+c exec i3-sensible-terminal -e vim ~/.config/i3/config

# screenshot
bindsym --release Print exec --no-startup-id "scrot -b '%Y:%m:%d:%H:%M:%S.png' -e 'mv $f ~/Pictures/'
bindsym --release Shift+Print exec --no-startup-id "scrot -b -u '%Y:%m:%d:%H:%M:%S.png' -e 'mv $f ~/Pictures/'

